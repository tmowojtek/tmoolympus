</head>

<body>
    <div id="body-tmo-text-image"><img src="/static/_old/images/prototypes_v3/elementy/tmo-text-end.png" alt="tmo-text" /><img src="/static/_old/images/prototypes_v3/elementy/tmo-text.png" alt="tmo-text" /></div>
    <div id="tmo-header">
        <a id="tmo-logo-a-link" href="/"><img id="tmo-img" src="/static/_old/images/prototypes_v3/elementy/imageedit_33_3852496117_v8.png" alt="tmo-logo" /></a>
        <!-- <div id="black-to-transparent-header-bar"></div> -->
    </div>
    <div id="header-black-strip"></div>
    <!-- -->
    <div id="nav-blue-strip"></div>
    <!-- -->
    <div id="tmo-nav-bar">
        <!--<div id="nav-bar-blue-strip"></div>-->
        <!-- -->
        <!--<div id="nav-bar-menu-list"></div> -->
        <div id="tmo-ts-ip-clipboard" class="not-active"></div>
        <ul>
            <li><a href="roster.html">ROSTER</a></li>
            <li><a href="history.html">HISTORY</a></li>
            <li><a class="not-active" href="">WARS</a></li>
            <li><a href="halloffame.html">HALL OF FAME</a></li>
            <li><a href="apply.html">APPLY</a></li>
            <li><a class="not-active" href="">FORUM</a></li>
        </ul>
    </div>
    <div id="black-to-white-strip"></div>
    <div id="blue-orange-pink-strip"></div>

    <div id="main-content">
        <div class="content-header">
            <p>MYTHS</p>
        </div>
        <div id="news-list-section">
            <% news.forEach(function(oneNews) { %>
                <div class="news">
                    <img src="<%= oneNews._categoryid.picturesrc %>" alt="<%= oneNews._categoryid.categoryname %>" />
                    <p class="title">
                        <a href="/news/<%= oneNews.newsid %>">
                            <%= oneNews.title %>
                        </a>
                    </p>
                    <p class="float-right">date: <span class="font-style-italic">
                        <%= 
                                        oneNews.date.getFullYear() + '-' +
                                        ('0' + (oneNews.date.getMonth()+1)).slice(-2) + '-' +
                                        ('0' + oneNews.date.getDate()).slice(-2);
                                    %>
                    </span></p>
                    <p class="float-right">author: <a href="/user/<%= oneNews._authorid.userid %>"><span class="color-darkviolet font-style-italic"><%= oneNews._authorid.tag %></span></a></p>
                    <p class="float-right">comments: <span class="color-cornflowerblue font-style-italic"><%= oneNews.commentscount %></span></p>
                </div>
                <% }); %>
        </div>
    </div>

    <div id="footer">
        <p id="footer-copyrights">= THE MYTH OF = &copy; 2016</p>
    </div>
    <!--<script type="text/javascript" src="/static/scripts/news-list.js"></script>-->
</body>

</html>